function govi_sdqs_crear_peticion_form($form, &$form_state) {

    $form = array();

    $form['pqr_crear'] = array(
        '#type' => 'fieldset',
        '#title' => 'Crear petición',
    );

    $temas = variable_get('govi_sdqs_lista_tema');
    $entidades = variable_get('govi_sdqs_lista_entidades');
    $tipos_peticion = variable_get('govi_sdqs_lista_tipo_peticion');

    if (empty($temas) || empty($entidades) || empty($tipos_peticion)) {

        $msg = '<p>Uno o varios códigos del SDQS no se han cargado en el sistema. <br/>';
        $msg .= 'Ingrese a la configuración del Webservice del módulo ';
        $msg .= '<a href="/admin/config/features/sdqs-client" title="Configurar SDQS">govi_sdqs</a> para ';
        $msg .= 'configurar las descripciones y obtener los datos de los selectores de ';
        $msg .= 'este formulario.';

        $form['pqr_crear']['aviso_sdqs'] = array(
            '#prefix' => '<div class="sdqs-form-msg">',
            '#markup' => $msg,
            '#suffix' => '</div>'
        );
    }

    foreach ($tipos_peticion as $tipo) {
        $opts_peticion[$tipo['id']] = $tipo['nombre'];
    }

    $form['pqr_crear']['tipo_peticion'] = array(
        '#type' => 'select',
        '#title' => 'Tipo de petición',
        '#options' => $opts_peticion,
        '#required' => TRUE
    );

    $opts_temas = array();

    foreach ($temas as $tema) {
        $opts_temas[$tema['id']] = $tema['nombre'];
    }

    $form['pqr_crear']['tema'] = array(
        '#type' => 'select',
        '#title' => 'Tema',
        '#options' => $opts_temas,
        '#required' => TRUE
    );

    // TODO: implementar autocomletado controlado desde el cliente
    // con JavaScript
    $opts_entidades = array();

    foreach ($entidades as $entidad) {
        $opts_entidades[$entidad['id']] = $entidad['nombre'];
    }

    $form['pqr_crear']['entidad'] = array(
        '#type' => 'select',
        '#title' => 'Entidad',
        '#options' => $opts_entidades,
        '#required' => TRUE
    );

    $form['pqr_crear']['asunto'] = array(
        '#type' => 'textarea',
        '#title' => 'Asunto',
        '#cols' => 30,
    );

    $form['pqr_crear']['archivo'] = array(
        '#type' => 'file',
        '#title' => 'Seleccione un archivo',
    );

    $form['pqr_crear']['submit'] = array(
        '#type' => 'submit',
        '#value' => 'Enviar',
        '#ajax' => array(
            'callback' => 'govi_sdqs_crear_peticion_ajax_submit',
            'wrapper' => 'govi-sdqs-crear-peticion-form',
            'method' => 'replaceWith',
            'effect' => 'fade',
        ),
        '#attributes' => array(
            'class' => array(
                'pure-button',
                'pure-button-primary'
            ),
        ),
    );

    $form['#popup'] = TRUE;
    $form['#attributes']['class'][] = 'pure-form';
    $form['#attributes']['class'][] = 'pure-form-stacked';

    return $form;
}

